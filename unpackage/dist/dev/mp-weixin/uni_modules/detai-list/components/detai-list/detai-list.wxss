.article_list {
  margin-top: 10rpx;
}
.article_list .article_item {
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  padding: 0 20rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  border-bottom: 1px solid gainsboro;
}
.article_list .article_item .nametime {
  display: flex;
  justify-content: space-between;
  color: #9a9a9a;
  font-size: 20rpx;
}
.article_list .article_item .nametime .userleft {
  display: flex;
  align-items: center;
}
.article_list .article_item .nametime .userleft .table {
  margin-left: 10rpx;
  font-size: 17rpx;
  color: #4295dd;
  padding: 3rpx;
  border-radius: 5rpx;
  box-sizing: border-box;
  border: 1px solid #4295dd;
}
.article_list .article_item .title {
  font-family: "微软雅黑";
  margin: 30rpx 0;
  font-size: 26rpx;
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}
.article_list .article_item .Fenleiai {
  margin-bottom: 5rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #9a9a9a;
  font-size: 20rpx;
}
.bg {
  background-color: red;
}
.deslist {
  color: grey;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 24rpx;
}

